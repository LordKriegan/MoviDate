<div class="container">
    <div class="row">
        <div id="loginForm" class="col-xs-4 col-xs-offset-4">
            <form role="form">
                <div class="form-group">
                    <label for="userName">Username: </label>
                    <input class="form-control" id="userName" type="text">
                </div>
                <div class="form-group">
                    <label for="password">Password: </label>
                    <input class="form-control" id="password" type="password">
                </div>
                <button class="btn btn-primary" id="userLoginBtn" type="submit">Login</button>
                <button class="btn btn-primary" id="showSignup" type="submit">Sign Up</button>
            </form>
        </div>
        <div id="signUpForm" class="col-xs-4 col-xs-offset-4">
            <form role="form">
                <div class="form-group">
                    <label for="signUpUn">Username: </label>
                    <input class="form-control" id="signUpUn" type="text">
                </div>
                <div class="form-group">
                    <label for="signUpPw">Password: </label>
                    <input class="form-control" id="signUpPw" type="password">
                </div>
                <div class="form-group">
                    <label for="signUpAge">Age: </label>
                    <input class="form-control" id="signUpAge" type="number">
                </div>
                <div class="form-group">
                    <label for="signUpDesc">Desc: </label>
                    <input class="form-control" id="signUpDesc" type="text">
                </div>
                <div class="form-group">
                    <label for="signUpGender">Gender: </label>
                    <input class="form-control" id="signUpGender" type="text">
                </div>
                <div class="form-group">
                    <label for="signUpPicture">Profile Picture: </label>
                    <input class="form-control" id="signUpPicture" type="text">
                </div>
                <button class="btn btn-primary" id="userSignUpBtn" type="submit">Sign Up</button>
                <button class="btn btn-primary" id="showLogin" type="submit">Login with Existing Account</button>
            </form>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.17.1/axios.min.js"></script>
<script src="/assets/js/login.js"></script>